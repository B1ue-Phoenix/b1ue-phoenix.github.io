{
	"name": "portfolio",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"dev": "vite dev",
		"format": "format-package -w && prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"package": "svelte-kit package",
		"prepare": "svelte-kit sync && husky install",
		"preview": "vite preview",
		"spell": "cspell \"src/**/*\" \"./*\" --fail-fast true"
	},
	"dependencies": {
		"@fontsource/nanum-myeongjo": "^4.5.7",
		"three": "^0.142.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.38",
		"@sveltejs/kit": "next",
		"@types/three": "^0.142.0",
		"cspell": "^6.2.3",
		"format-package": "^7.0.0",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.5.0",
		"sass": "^1.53.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-cubed": "^0.2.1",
		"svelte-preprocess": "^4.10.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.0.0"
	}
}
